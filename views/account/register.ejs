<% if (title) { %>
    <h1><%= title %></h1>
<% } %>


<% if (messages && messages.success && messages.success.length) { %>
    <div class="flash-message success"><%= messages.success %></div>
  <% } %>
  
  <% if (messages && messages.error && messages.error.length) { %>
    <div class="flash-message error"><%= messages.error %></div>
  <% } %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="login-container">
    <form action="/account/register" method="POST">
        

        <label for="fname">FirstName:</label>
        <input type="text" id="fname" name="account_firstname" required>

        <label for="lname">LastName:</label>
        <input type="text" id="lname" name="account_lastname" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <div class="password-wrapper">
            <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <button type="button" id="togglePassword">Show</button>
        </div>

        <div>
            password must be minimum of 12 characters and include 1 one capital letter
            , 1 one number, and 1 special character
        </div>

        <button type="submit">Register</button>
        
    </form>
    <p>Already have an account? <a href="/account/Login">Login</a></p>
</div>




